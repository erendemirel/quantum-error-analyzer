{
  "name": "quantum-error-analyzer-web",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "check": "bash scripts/check-prerequisites.sh",
    "build:wasm": "cd ../wasm && wasm-pack build --target web --out-dir ../web/wasm-pkg",
    "dev": "bun run vite",
    "build": "bun run build:wasm && bun run vite build",
    "preview": "bun run vite preview",
    "test:e2e": "bunx playwright test",
    "test:e2e:ui": "bunx playwright test --ui",
    "setup": "bun run check && bun run build:wasm && bun install"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "@playwright/test": "^1.40.0"
  }
}
